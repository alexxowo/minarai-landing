---
import HeaderTitle from "./atoms/HeaderTitle.astro";
---

<section id="contact" class="max-w-7xl mx-auto px-4 md:px-12 py-20 bg-white">
  <div class="mb-16 flex justify-center">
    <HeaderTitle class="items-center" lineColor="golden-rod-500">
      CONTÁCTANOS
    </HeaderTitle>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-12 md:gap-24">
    <!-- Left Column: Ubicación & Social -->
    <div class="flex flex-col gap-12">
      <!-- Ubicación -->
      <div class="flex flex-col items-center">
        <h3 class="font-bebas text-3xl uppercase tracking-wide mb-6">UBICACIÓN</h3>
        
        <div class="w-full aspect-4/3 bg-gray-200 rounded-lg overflow-hidden mb-6 shadow-md">
           <!-- Placeholder for Map -->
           <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d1388.26128880385!2d-70.18038219312145!3d11.756305128352444!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8e8593f679578d49%3A0x8d1d30f7f7e82f50!2sDojo%20Minarai!5e1!3m2!1ses!2sve!4v1771599725351!5m2!1ses!2sve" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
        </div>

        <div class="flex gap-4 items-start max-w-sm">
           <svg viewBox="0 0 24 24" fill="#EAB308" class="w-10 h-10 shrink-0">
              <path d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7zm0 9.5c-1.38 0-2.5-1.12-2.5-2.5s1.12-2.5 2.5-2.5 2.5 1.12 2.5 2.5-1.12 2.5-2.5 2.5z"/>
           </svg>
           <p class="font-raleway font-light text-lg text-black leading-tight">
             Centro Comercial Jardín, Local 1 Av Juan Crisóstomo Falcón, Judibana 4148, Falcón
           </p>
        </div>
      </div>

      <!-- Síguenos -->
      <div class="flex flex-col items-center">
         <h3 class="font-bebas text-3xl uppercase tracking-wide mb-4">¡SÍGUENOS!</h3>
         <div class="flex gap-6">
            <!-- TikTok -->
            <a href="https://www.tiktok.com/@minarai.dojo" target="_blank" rel="noopener noreferrer" class="text-golden-rod-500 hover:text-golden-rod-600 transition-colors">
               <svg viewBox="0 0 24 24" fill="currentColor" class="w-8 h-8">
                  <path d="M19.59 6.69a4.83 4.83 0 0 1-3.77-4.25V2h-3.45v13.67a2.89 2.89 0 0 1-5.2 1.74 2.89 2.89 0 0 1 2.31-4.64 2.93 2.93 0 0 1 .88.13V9.4a6.84 6.84 0 0 0-1-.05A6.33 6.33 0 0 0 5 20.1a6.34 6.34 0 0 0 10.86-4.43v-7a8.16 8.16 0 0 0 4.77 1.52v-3.4a4.85 4.85 0 0 1-1-.1z"/>
               </svg>
            </a>
            <!-- Facebook -->
            <a href="https://www.facebook.com/profile.php?id=100070053902089" target="_blank" rel="noopener noreferrer" class="text-golden-rod-500 hover:text-golden-rod-600 transition-colors">
               <svg viewBox="0 0 24 24" fill="currentColor" class="w-8 h-8">
                   <path d="M22 12c0-5.52-4.48-10-10-10S2 6.48 2 12c0 4.84 3.44 8.87 8 9.8V15H7v-3h3v-2.26c0-2.97 1.76-4.63 4.47-4.63 1.3 0 2.66.23 2.66.23v2.92h-1.5c-1.47 0-1.92.9-1.92 1.83V12h3.3l-.53 3h-2.77v6.86c4.56-.93 8-4.96 8-9.8z" />
               </svg>
            </a>
            <!-- Instagram -->
            <a href="https://www.instagram.com/minaraidojo/" target="_blank" rel="noopener noreferrer" class="text-golden-rod-500 hover:text-golden-rod-600 transition-colors">
               <svg viewBox="0 0 24 24" fill="currentColor" class="w-8 h-8">
                   <path d="M7.8 2h8.4C19.4 2 22 4.6 22 7.8v8.4a5.8 5.8 0 0 1-5.8 5.8H7.8C4.6 22 2 19.4 2 16.2V7.8A5.8 5.8 0 0 1 7.8 2m-.2 2A3.6 3.6 0 0 0 4 7.6v8.8C4 18.39 5.61 20 7.6 20h8.8a3.6 3.6 0 0 0 3.6-3.6V7.6C20 5.61 18.39 4 16.4 4H7.6m9.65 1.5a1.25 1.25 0 0 1 1.25 1.25A1.25 1.25 0 0 1 17.25 8 1.25 1.25 0 0 1 16 6.75a1.25 1.25 0 0 1 1.25-1.25M12 7a5 5 0 0 1 5 5 5 5 0 0 1-5 5 5 5 0 0 1-5-5 5 5 0 0 1 5-5m0 2a3 3 0 0 0-3 3 3 3 0 0 0 3 3 3 3 0 0 0 3-3 3 3 0 0 0-3-3z"/>
               </svg>
            </a>
         </div>
      </div>
    </div>

    <!-- Right Column: Formulario & Contactos -->
    <div class="flex flex-col gap-12">
       <div class="flex flex-col items-end">
          <h3 class="font-bebas text-3xl uppercase tracking-wide mb-6">FORMULARIO DE CONTACTO</h3>
          
          <form class="w-full flex flex-col gap-4 shadow-lg p-6 bg-white border border-gray-100 rounded-lg">
             <input type="text" placeholder="INGRESA TU NOMBRE Y APELLIDO" class="w-full px-4 py-3 bg-white border border-gray-200 rounded font-raleway font-light focus:outline-none focus:border-golden-rod-500 shadow-sm" />
             <input type="email" placeholder="INGRESA TU CORREO ELECTRÓNICO" class="w-full px-4 py-3 bg-white border border-gray-200 rounded font-raleway font-light focus:outline-none focus:border-golden-rod-500 shadow-sm" />
             <textarea placeholder="INGRESA TU MENSAJE" rows="6" class="w-full px-4 py-3 bg-white border border-gray-200 rounded font-raleway font-light focus:outline-none focus:border-golden-rod-500 shadow-sm resize-none"></textarea>
          </form>

          <div class="w-full mt-6 flex justify-start">
             <button class="bg-golden-rod-500 hover:bg-golden-rod-600 text-black font-bebas text-xl px-8 py-2 rounded shadow transition-colors">
                ENVIAR
             </button>
          </div>
       </div>

       <!-- Contactos Right Aligned -->
       <div class="flex flex-col items-end">
          <h3 class="font-bebas text-3xl uppercase tracking-wide mb-4">CONTACTOS</h3>
          <div class="flex flex-col items-end gap-2 font-raleway text-lg">
