---
import AnimatedLink from "../atoms/AnimatedLink.astro";
import logoPos from '../../assets/images/logotipo_color.svg';
import logoKanjiPos from '../../assets/images/logo_kanji_pos.svg';
---

<nav class="bg-black w-full h-16 md:h-20 flex-none fixed top-0 z-50 transition-all duration-300">
    <div class="w-full h-full flex items-center justify-between px-4 md:px-8 max-w-7xl mx-auto">
        <!-- Logo -->
        <div class="flex items-center gap-2 hover:cursor-pointer hover:opacity-80 transition-all duration-300" onclick="window.location.href = '/#'">
            <img src={logoPos.src} alt="Logo Minarai" class="w-8 h-8 md:w-12 md:h-12">
            <img src={logoKanjiPos.src} alt="Minarai Kanji" class="w-16 h-auto md:w-20">
        </div>

        <!-- Desktop Menu -->
        <div class="hidden md:flex h-full items-center justify-center">
            <ul class="flex items-center justify-center gap-6 lg:gap-8">
                <li><AnimatedLink hoverColor="--color-golden-rod-500" href="#about" class="text-white text-sm lg:text-base">Quienes somos</AnimatedLink></li>
                <li><AnimatedLink hoverColor="--color-golden-rod-500" href="#benefits" class="text-white text-sm lg:text-base">Beneficios</AnimatedLink></li>
                <li><AnimatedLink hoverColor="--color-golden-rod-500" href="#schedules" class="text-white text-sm lg:text-base">Horarios</AnimatedLink></li>
                <li><AnimatedLink hoverColor="--color-golden-rod-500" href="#team" class="text-white text-sm lg:text-base">Equipo</AnimatedLink></li>
                <li><AnimatedLink hoverColor="--color-golden-rod-500" href="#faqs" class="text-white text-sm lg:text-base">Preguntas frecuentes</AnimatedLink></li>
                <li><AnimatedLink hoverColor="--color-golden-rod-500" href="#contact" class="text-white text-sm lg:text-base">Contacto</AnimatedLink></li>
                <li><button class="text-white bg-golden-rod-500 px-4 py-1.5 rounded-md hover:cursor-pointer hover:bg-golden-rod-600 transition-colors duration-300 text-sm lg:text-base uppercase font-bebas tracking-wide">Iniciar Sesión</button></li>
            </ul>
        </div>

        <!-- Mobile Menu Button -->
        <div class="md:hidden flex items-center">
            <button id="mobile-menu-btn" class="text-white focus:outline-none p-2">
                <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
                </svg>
            </button>
        </div>
    </div>

    <!-- Mobile Menu Overlay -->
    <div id="mobile-menu" class="fixed inset-0 bg-black bg-opacity-95 z-40 transform translate-x-full transition-transform duration-300 md:hidden flex flex-col items-center justify-center gap-8">
        <button id="close-menu-btn" class="absolute top-6 right-6 text-white p-2">
            <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
        </button>

        <ul class="flex flex-col items-center gap-8 text-xl">
            <li><a href="#about" class="mobile-link text-white hover:text-golden-rod-500 transition-colors font-bebas tracking-wide text-2xl">Quienes somos</a></li>
            <li><a href="#benefits" class="mobile-link text-white hover:text-golden-rod-500 transition-colors font-bebas tracking-wide text-2xl">Beneficios</a></li>
            <li><a href="#schedules" class="mobile-link text-white hover:text-golden-rod-500 transition-colors font-bebas tracking-wide text-2xl">Horarios</a></li>
            <li><a href="#team" class="mobile-link text-white hover:text-golden-rod-500 transition-colors font-bebas tracking-wide text-2xl">Equipo</a></li>
            <li><a href="#faqs" class="mobile-link text-white hover:text-golden-rod-500 transition-colors font-bebas tracking-wide text-2xl">Preguntas frecuentes</a></li>
            <li><a href="#contact" class="mobile-link text-white hover:text-golden-rod-500 transition-colors font-bebas tracking-wide text-2xl">Contacto</a></li>
            <li><button class="text-black bg-golden-rod-500 px-8 py-3 rounded-md hover:bg-golden-rod-600 transition-colors duration-300 text-xl font-bebas tracking-wide uppercase">Iniciar Sesión</button></li>
        </ul>
    </div>
</nav>

<script>
    const menuBtn = document.getElementById('mobile-menu-btn');
    const closeBtn = document.getElementById('close-menu-btn');
    const mobileMenu = document.getElementById('mobile-menu');
    const mobileLinks = document.querySelectorAll('.mobile-link');

    const toggleMenu = () => {
        mobileMenu?.classList.toggle('translate-x-full');
        document.body.classList.toggle('overflow-hidden');
    };

    menuBtn?.addEventListener('click', toggleMenu);
    closeBtn?.addEventListener('click', toggleMenu);

    mobileLinks.forEach(link => {
        link.addEventListener('click', toggleMenu);
    });
</script>