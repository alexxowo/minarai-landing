---
import type { ImageMetadata } from 'astro';

interface Props {
	Title: string;
	Lead: string;
	Record: string[];
	image: string | ImageMetadata;
}

const { Title, Lead, Record, image } = Astro.props;
const imageSrc = typeof image === 'string' ? image : image.src;

const visibleRecords = Record.slice(0, 3);
const hiddenRecords = Record.slice(3);
const hasMore = hiddenRecords.length > 0;
---

<div class="team-card group bg-white rounded-2xl shadow-sm hover:shadow-2xl transition-all duration-500 border border-gray-100 flex flex-col transform hover:-translate-y-2">
	<div class="relative overflow-hidden aspect-square">
		<img 
			src={imageSrc} 
			alt={Title} 
			class="w-full h-full object-cover transform group-hover:scale-110 transition-transform duration-700"
		/>
		<div class="absolute inset-0 bg-linear-to-t from-black-beauty-900/40 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
	</div>
	
	<div class="p-6 flex flex-col grow">
		<div class="mb-4">
			<h4 class="text-xl font-bold text-black-beauty-800 group-hover:text-barbados-cherry-600 transition-colors duration-300">
				{Title}
			</h4>
			<p class="text-golden-rod-600 font-bold uppercase tracking-wider text-xs mt-1">
				{Lead}
			</p>
		</div>

		<div class="space-y-3 mb-6 grow">
			<ul class="space-y-2">
				{visibleRecords.map((item) => (
					<li class="flex items-start gap-2 text-black-beauty-600">
						<span class="w-1.5 h-1.5 rounded-full bg-barbados-cherry-500 mt-2 shrink-0"></span>
						<span class="text-sm font-medium leading-relaxed">{item}</span>
					</li>
				))}
			</ul>

			{hasMore && (
				<details class="group/details mt-4">
					<summary class="list-none cursor-pointer flex items-center gap-2 text-sm font-bold text-barbados-cherry-600 hover:text-barbados-cherry-700 transition-colors">
						<span>Ver historial completo</span>
						<svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 transform group-open/details:rotate-180 transition-transform duration-300" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
							<path d="m6 9 6 6 6-6"/>
						</svg>
					</summary>
					<div class="pt-3">
						<ul class="space-y-2">
							{hiddenRecords.map((item) => (
								<li class="flex items-start gap-2 text-black-beauty-600">
									<span class="w-1.5 h-1.5 rounded-full bg-barbados-cherry-400 mt-2 shrink-0"></span>
									<span class="text-sm font-medium leading-relaxed">{item}</span>
								</li>
							))}
						</ul>
					</div>
				</details>
			)}
		</div>

		<div class="pt-6 border-t border-gray-100 mt-auto">
			<div class="h-1 w-12 bg-barbados-cherry-500 rounded-full group-hover:w-full transition-all duration-500"></div>
		</div>
	</div>
</div>

<style>
	.animate-fadeIn {
		animation: fadeIn 0.3s ease-out forwards;
	}

	@keyframes fadeIn {
		from { opacity: 0; transform: translateY(-10px); }
		to { opacity: 1; transform: translateY(0); }
	}

	/* Hide details marker */
	details summary::-webkit-details-marker {
		display: none;
	}
</style>
