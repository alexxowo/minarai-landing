<section class="w-full h-[500px] mt-20 mb-20 relative">
  <!-- Background Container -->
  <div class="absolute bottom-0 w-full h-[85%] bg-golden-rod-500 flex items-center justify-center">
      <div class="max-w-7xl mx-auto px-4 md:px-12 w-full flex h-full relative">
          
          <!-- Image Section (Left) -->
          <div class="hidden md:flex flex-1 relative h-full items-end justify-center md:justify-start">
             <!-- Image protruding from top. 
                  Container is h-[85%], component is 500px. 
                  We want the image to start from bottom of container and go up.
                  The container accounts for the yellow bg. 
                  We want the image to go higher than the yellow bg.
              -->
              <img 
                src="https://placehold.co/400x600/png" 
                alt="Karate Student" 
                class="absolute bottom-0 left-0 w-auto h-[115%] object-cover object-top z-10"
              />
